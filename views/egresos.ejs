        <script>
            function agregarColumna() {
                // Obtener la tabla
                const table = document.getElementById('egresosTable');
                const rows = table.rows;
    
                // Crear encabezado para la nueva columna
                const nuevoMes = prompt("Ingrese el nombre del nuevo mes o columna:");
                if (!nuevoMes) return;
    
                // Agregar encabezado
                const th = document.createElement('th');
                th.textContent = nuevoMes.toUpperCase();
                rows[0].appendChild(th);
    
                // Agregar celdas vacías a cada fila
                for (let i = 1; i < rows.length; i++) {
                    const td = document.createElement('td');
                    td.textContent = ''; // Puedes dejar esto vacío o con un valor predeterminado
                    rows[i].appendChild(td);
                }
            }
        </script>
