      text-decoration: none;
      color: #ccc;
      font-size: 1.2em;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
  
    .sidebar a i {
      font-size: 1.5em;
      /* Tamaño más pequeño de íconos */
      margin-right: 10px;
      transition: transform 0.2s ease;
    }
  
    .sidebar a:hover {
      background-color: #34495e;
      color: #fff;
    }
  
    .sidebar a:hover i {
      transform: scale(1.2);
    }
  
    .sidebar .link-text {
      display: none;
      margin-left: 10px;
      font-size: 1em;
    }
  
    .sidebar.expanded .link-text {
      display: inline;
    }
  
    .sidebar a:hover .link-text {
      display: inline;
    }
  
    .sidebar .toggle-btn {
      position: absolute;
      top: 10px;
      right: -30px;
      font-size: 1.8em;
      color: #fff;
      cursor: pointer;
    }
  
    /* Estilos para el contenido principal */
