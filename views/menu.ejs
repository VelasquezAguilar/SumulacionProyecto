    <!-- Script de Plotly para el gráfico -->
    <script>
        // Datos del gráfico
        const data = [{
            x: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo'],
            y: [1000, 1500, 1200, 2000, 1700], // Ingresos
            z: [500, 800, 700, 1000, 900],    // Egresos
            type: 'scatter3d',
            mode: 'lines+markers',
            marker: { size: 5, color: '#1e88e5' },
            line: { color: '#3949ab', width: 3 },
            name: 'Flujos de Efectivo'
        }];

        // Layout del gráfico
        const layout = {
            title: 'Proyección 3D de Flujos de Efectivo',
            scene: {
                xaxis: { title: 'Meses' },
                yaxis: { title: 'Ingresos ($)' },
                zaxis: { title: 'Egresos ($)' }
            },
            margin: { l: 0, r: 0, b: 0, t: 50 },
            paper_bgcolor: 'rgba(255, 255, 255, 0.8)',
        };

        // Renderizar gráfico en el div #graph
        Plotly.newPlot('graph', data, layout);
    </script>

