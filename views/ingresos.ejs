    </nav>

    <div>
      <div class="linea"></div>

      <div class="modo-oscuro">
        <div class="info">
          <ion-icon name="moon-outline"></ion-icon>
          <span>Drak Mode</span>
        </div>
        <div class="switch">
          <div class="base">
            <div class="circulo"></div>
